<section class="section">
  <h3 class="page-title">Available Products</h3>
  <hr class="w-25" />
  <div class="row">

    {{#each data}}

      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <img src="{{dataValues.image}}" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title">{{dataValues.title}}</h5>
            <h5 class="price">$ {{dataValues.price}}</h5>
            <p class="description">{{dataValues.description}}</p>
            <a
              href="/product/{{dataValues.id}}"
              class="btn btn-sm btn-primary"
            >know more</a>
          </div>
        </div>
      </div>
    {{else}}
      <p>No product is available</p>
    {{/each}}

  </div>
</section>