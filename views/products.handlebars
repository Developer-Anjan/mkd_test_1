<section class="container">
  <h3 class="text center">Available Products</h3>
  <div class="row">

    {{#each data}}

      <div class="cols-md-4">
        <div class="card" style="width: 18rem;">
          <img src="{{dataValues.image}}" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title">{{dataValues.title}}</h5>
            <h5 class="card-subtitle">$ {{dataValues.price}}</h5>
            <p class="card-text">{{dataValues.description}}</p>
            <a
              href="/product/{{dataValues.id}}"
              class="btn btn-primary"
            >know-more</a>
          </div>
        </div>
      </div>
    {{else}}
      <p>No product is available</p>
    {{/each}}

  </div>
</section>